@using HamVarzeshi.Web.Startup
@using HamVarzeshi.Web.Models.ClubSessions
@model ClubSessionListViewModel
@{
    ViewBag.Title = L("ClubSessions");
    ViewBag.CurrentPageName = PageNames.ClubSessions;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/ClubSessions/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/ClubSessions/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("ClubSessions")</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#ClubSessionCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/ClubSessions/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="ClubSessionsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("ClubName")</th>
                                        <th>@L("Title")</th>
                                        <th>@L("DurationHour")</th>
                                        <th>@L("CostPerHour")</th>
                                        <th>@L("TotalCosts")</th>
                                        <th>@L("IsActive")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/ClubSessions/_CreateModal.cshtml", Model)

<div class="modal fade" id="ClubSessionEditModal" tabindex="-1" role="dialog" aria-labelledby="ClubSessionEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
